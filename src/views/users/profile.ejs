<!DOCTYPE html>
<html lang="es">
<%- include('../partials/head') %>
<%- include('../partials/bootstrap') %>
    <body>
        <%- include('../partials/header') %>
            <main>
                <!-- productCreateForm -->
                <div class="container my-5">
                    <div class="row justify-content-center bg-steel-light border border-secondary rounded p-4">
                        <div class="col-md-10">
                            <h2 class="text-center mb-5">Usuario</h2>
                            
                            <div class="d-flex justify-content-between row">
                                <div class="col-md-3 pb-4">
                                    <img class="img-fluid bg-teal-light border rounded-circle"" src="/images/users/default.png" alt="">
                                </div>
                                <div class="col-md-7 container my-1">
                                    <form method="POST" action="/" enctype="multipart/form-data">
                                        <div class="row my-1">
                                            <div class="col-md-6 my-1">
                                                <div class="form-group">
                                                    <label><b>Nombre:</b></label>
                                                    <input type="text" name="name" class="form-control">
                                                    <div class="invalid-feedback">
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-md-6 my-1">
                                                <div class="form-group">
                                                    <label><b>Apellido:</b></label>
                                                    <input type="text" name="last-name" class="form-control">
                                                    <div class="invalid-feedback">
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-md-6 my-1">
                                                <div class="form-group">
                                                    <label><b>Email:</b></label>
                                                    <input type="email" name="email" class="form-control">
                                                    <div class="invalid-feedback">
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-md-6 my-1">
                                                <div class="form-group">
                                                    <label><b>Contraseña:</b></label>
                                                    <input type="password" name="password" class="form-control"s>
                                                    <div class="invalid-feedback">
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-md-6 my-1">
                                                <div class="form-group">
                                                    <label><b>Categoría:</b></label>                                           
                                                    <select name="category" class="form-select">
                                                        <option value="0"></option>
                                                    </select>
                                                    <div class="invalid-feedback">
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-md-6 my-1">
                                                <div class="form-group">
                                                    <label><b>Imagen:</b></label>
                                                    <input class="form-control" type="file" name="avatar">
                                                    <div class="invalid-feedback">
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-12 text-center my-3 mt-4">
                                                <button class="btn btn-teal text-light">Guardar</button>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                                </div>
                            
                        </div>
                    </div>
                </div>
            </main>
            <%- include('../partials/footer') %>
    </body>

</html>